                        <span t-if='name' t-esc="name"/>
                        <span t-else="">Gaming Desktops
                        </span>
                    </h1>
                    <p class="mt32 page-title-line">You can select and customize your system</p>
                </div>

                <section id="infiniarc-models" class="mt32 mb32">
                    <div class="container"
                         style="text-align: center;">
                        <div class="game-container mt16 mb16">
                            <ul class="content-center nav">
<!--                                <li class="models-categ col content-center nav-item">-->
<!--                                    <a role="tab" t-attf-class="nav-link nav-title-root"-->
<!--                                       aria-selected="false" aria-controls="combos"-->
<!--                                       href="/gaming-desktops">-->
<!--                                        <span>All PCs</span>-->
<!--                                    </a>-->
<!--                                </li>-->


                                <t t-foreach="website.filter_ids" t-as="site">

