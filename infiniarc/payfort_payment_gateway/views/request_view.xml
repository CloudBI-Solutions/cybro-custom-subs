<odoo>
      <template id="request_order_form" name="Token form">
        <t t-call="website.layout">
            <div class="container">
                <div id="wrap" class="oe_structure oe_empty">
                        <div class="col-md-12">
                            <form action="https://sbcheckout.payfort.com/FortAPI/paymentPage"  method="post">
                                     <div class="form-group">
                                    <div class="container">
                                         <input  type="hidden" class="form-control s_website_form_input"
                                                   name="service_command" value="TOKENIZATION"/>

                                           <input  type="hidden" class="form-control s_website_form_input"
                                                   name="language" value="en"/>
                                           <input  type="hidden" class="form-control s_website_form_input"
                                                   name="merchant_identifier" value="197b6080"/>

                                           <input  type="hidden" class="form-control s_website_form_input"
                                                   name="access_code" value="uSmoO9cqZTwXvPnOkqwQ"/>

                                           <input  type="hidden" class="form-control s_website_form_input"
                                                   name="signature" value="2423c2c5512c6d36c4e5ce6151d5882aaceee92099ebad5322e09656fefb17d0e918733554aeb9cd250f941245a3d69b0a51d77e5a9ab42cb9cc426e024082d0"/>

                                           <input  type="hidden" class="form-control s_website_form_input"
                                                   name="return_url" value="/response/value"/>
                                           <input  type="hidden" class="form-control s_website_form_input"
                                                   name="merchant_reference" value="ORD4"/>
                <button value="Send" type="submit" id="response"/>
                                    </div>
                                     </div>
                            </form>
                        </div>

                </div>
            </div>
        </t>
      </template>
</odoo>

