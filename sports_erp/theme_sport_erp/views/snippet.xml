        <template id="s_hero_snippet" name="Hero Snippet">
            <section>
                <div class="set-home-hero">
                    <div class="set-wrapper set-home-hero__container  position-relative">
                        <div class="set-home-hero__content">
                            <h1 class="set-home-hero__header">Set your Sport
                                Organization to Grow.
                            </h1>
                            <p class="set-home-hero__lead">Let everyone focus on
                                the
                                best part of the work.
                            </p>
                            <div class="set-home-hero__button-container">
                                <a href="#"
                                   class="set-button set-button--primary set-button--resp-block set-button--shadow">
                                    Schedule Demo
                                </a>
                                <a href="#" class="set-button set-button--link">
                                    <img src="/theme_sport_erp/static/src/images/ui/play-circle-outline.svg"
                                         class="set-button__icon mr-1"/>Check
                                    out our
                                    Videos
                                </a>
                            </div>
                            <img src="/theme_sport_erp/static/src/images/brand/hero-image.png"
                                 title="Set your Sport Organization to Grow"
                                 alt="A running athlete"
                                 class="set-home-hero__heo-image"/>
                        </div>
                        <div class="set-home-hero__categories">
                            <div class="set-home-hero__category-card">
                                <img class="set-home-hero__category-icon set-home-hero__category-icon--individual-icon"
                                     src="/theme_sport_erp/static/src/images/ui/individual-sports.svg"
                                     alt="Individual Sport" width="18"
                                     height="18"/>
                                <span class="set-home-hero__category-text">
                                    Individual Sports
                                </span>
                                <img class="set-home-hero__category-chevron"
                                     src="/theme_sport_erp/static/src/images/ui/chevron-right-grey.svg"
                                     alt="Individual Sport"
                                     width="18" height="18"/>
                            </div>

                            <div class="set-home-hero__category-card">
                                <img class="set-home-hero__category-icon set-home-hero__category-icon--team-icon"
                                     src="/theme_sport_erp/static/src/images/ui/team-sport.svg"
                                     alt="Team Sport" width="32" height="32"/>
                                <span class="set-home-hero__category-text">Team
                                    Sports
                                </span>
                                <img class="set-home-hero__category-chevron"
                                     src="/theme_sport_erp/static/src/images/ui/chevron-right-grey.svg"
                                     alt="Individual Sport"
                                     width="18" height="18"/>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>

