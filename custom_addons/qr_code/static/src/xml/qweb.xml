<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="qr_template">
        <div class="o_mail_systray_item dropdown">
            <a class="dropdown-toggle o-no-caret" data-toggle="dropdown"
               data-display="static" aria-expanded="false" title="QR Code"
               href="#"
               role="button">
                <i class="fa fa-qrcode" role="img" aria-label="QR Code"/>
            </a>
            <ul class="o_mail_navbar_dropdown dropdown-menu dropdown-menu-right"
                role="menu">
                <li class="o_mail_navbar_dropdown_top"
                    style="height:130px;
                           width:250px;
                           border:1px solid blue;">
                    <div class="container">
                        <br/>
                        <center>
                            <header>
                                <h6>QR Generator</h6>
                            </header>
                            <sheet>
                            <div>
                            <form>
                                <input id="text_input" type="text"
                                       placeholder="What to convert?"/>
                                <br/>
                                    <input type="button"
                                           id="btn_clear"
                                           class="btn btn-default"
                                           title="Clear">
                                        <i class="fa fa-remove"/>
                                    </input>
                                    <input type="button"
                                           id="btn_qr"
                                           class="btn btn-default"
                                           title="Generate QR">
                                        <i class="fa fa-qrcode"/>
                                    </input>
                                    <input type="button"
                                           id="btn_download"
                                           class="btn btn-default"
                                           title="Download QR">
                                        <a href="#" download="QR_code.png"
                                           id="qr_download">
                                        <i class="fa fa-download"/>
                                        </a>
                                    </input>
                            </form>
                            </div>
                            </sheet>
                        </center>
                    </div>
                </li>
            </ul>
        </div>
    </t>
</templates>
